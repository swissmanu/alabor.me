extends layout

block append vars
	- bodyclass = 'home'

block content
	each article in articles
		article(class="article intro #{ article.metadata.styleClass || '' }")
			div.content-wrap
				header
					p.date: time(datetime=article.date)= moment.utc(article.date).format('DD. MMMM YYYY')
					h2: a(href=article.url)= article.title
				section.content
					!{ typogr(article.intro).typogrify() }
					if article.hasMore
						p.more
							a(href=article.url) more

block prepend footer
	div.nav
		if prevPage
			a(href=prevPage.url) « Newer
		else
			a(href='/archive.html') « Archives
		if nextPage
			a(href=nextPage.url) Next page »